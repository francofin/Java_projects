package threading;

public class Application {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		System.out.println("Hello Starting Thread 1");
		Task taskRunner = new Task();
		taskRunner.start();
		
		
		System.out.println("Hello Starting Thread 2");
		
		Task taskRunner2 = new Task();
		taskRunner2.start();
	}

}


class Task extends Thread {
	
	public void run() {
		for(int i=0; i<1000; i++) {
//			if (Thread.currentThread().getName()=="Thread-1") {
//				
//			}
			System.out.println("number: "+ i + " - " + Thread.currentThread().setName());
			try {
				Thread.sleep(10);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
	}
	
}