package car_dealership;

public class Employee {
	String name;
	String title;
	int employeeId;
	private boolean decisionMaker;
	
	
	
	
	
	public boolean isDecisionMaker() {
		return decisionMaker;
	}


	public void setDecisionMaker(boolean decisionMaker) {
		this.decisionMaker = decisionMaker;
	}


	public Employee(String name, String title, int employeeId, boolean decisionMaker) {
		super();
		this.name = name;
		this.title = title;
		this.employeeId = employeeId;
		this.decisionMaker = decisionMaker;
	}


	public void handleCustomer(Customer cust, boolean lease, Cars car) {
		
		if(lease) {
			runCreditHistory(cust);
		} else if (car.getPrice(cust) <= cust.cashOnHand) {
			processTransaction(null, 0);
		}
		else {
			"Bring More Money";
		}
	}
	
	
