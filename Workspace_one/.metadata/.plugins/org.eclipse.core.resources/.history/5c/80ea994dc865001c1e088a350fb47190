	public Employee(String name, String title, int employeeId, boolean decisionMaker) {
		super();
		this.name = name;
		this.title = title;
		this.employeeId = employeeId;
		this.decisionMaker = decisionMaker;
	}


	public void handleCar(Customet cust, boolean finance, Vehicle vehicle) {
		
		if(finance) {
			runCreditHistory(Cusgtomer cust, double loanAmount)
		} else if (vehicle.getPrice() <= cust.cashOnHand) {
			processTransaction(null, 0);
		}
		else {
			"Bring More Money";
		}
	}
	
	
